<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    tools:context="com.example.chiakiiwamoto.countme.CreditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/chi_logo"
            android:layout_marginTop="80dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C H I A K I    I W A M O T O"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:text="Many thanks to everyone who \n contributed to developing COUNT ME, \n whether it be helping code, testing, \n coming up with ideas or even just cheering.\n\nSpecial thank you to; \n\n Matthew Carr \n Kriss Mahatumartana"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/linkedin_icon"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:id="@+id/link_linkedin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/backToMain_btn"
            />

    </LinearLayout>

</LinearLayout>
